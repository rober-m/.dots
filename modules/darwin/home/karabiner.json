              }
            ]
          },
          {
            "description": "Double tap left-control to open Kitty",
            "manipulators": [
              {
                "conditions": [
                  {
                    "name": "left_control pressed",
                    "type": "variable_if",
                    "value": 1
                  }
                ],
                "from": {
                  "key_code": "left_control",
                  "modifiers": {
                    "optional": [
                      "any"
                    ]
                  }
                },
                "to": [
                  {
                    "shell_command": "open '/Applications/Nix Apps/Kitty.app'"
                  }
                ],
                "type": "basic"
              },
              {
                "from": {
                  "key_code": "left_control",
                  "modifiers": {
                    "optional": [
                      "any"
                    ]
                  }
                },
                "to": [
                  {
                    "set_variable": {
                      "name": "left_control pressed",
                      "value": 1
                    }
                  },
                  {
                    "key_code": "left_control"
                  }
                ],
                "to_delayed_action": {
                  "to_if_canceled": [
                    {
                      "set_variable": {
                        "name": "left_control pressed",
                        "value": 0
                      }
                    }
                  ],
                  "to_if_invoked": [
                    {
                      "set_variable": {
                        "name": "left_control pressed",
                        "value": 0
                      }
                    }
                  ]
                },
                "type": "basic"
              }
            ]
